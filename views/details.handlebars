<section id="details-page">

    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">

                <h1>{{movie.title}}</h1>
                <div class="card-movie">
                    <div class="first-info">
                        <p class="card-genre">Genre: {{movie.genre}}</p>
                        <p class="card-director">Director: {{movie.director}}</p>
                    </div>
                    <div class="second-info">
                        <p class="card-year">Year: {{movie.year}}</p>
                        <p class="card-ranking">Rating: <span id="stars">
                                <script>
                                    function generateStars(rating) {
                                        const starContainer = document.getElementById("stars");
                                        starContainer.innerHTML = '';

                                        for (let i = 1; i <= rating; i++) {
                                            starContainer.innerHTML += "&#x2605; ";
                                        }
                                    }

                                    generateStars({{ movie.rating }});
                                </script>

                            </span></p>
                    </div>

                </div>

                <p class="disc">Description: {{movie.description}}</p>
            </div>
            {{#if isAuthorized}}
            <div class="details-btn">
                <button id="edit-button">Edit</button>
                <button id="delete-button">Delete</button>
            </div>
            {{/if}}
        </div>
        <div class="card_right">
            <img src={{movie.imageUrl}} alt="image">
        </div>
    </div>

    <div class="main-cast-card">
        {{#each casts}}
        <div class="cast-card">
            <div class="card-img">
                <img src={{this.castImage}} alt={{this.name}}>
            </div>
            <div class="cast-info">
                <h1>{{this.name}}</h1>
                <h3>Age: {{this.age}}</h3>
                <h3>Born: {{this.born}}</h3>
                <h3>Name in Movie: {{this.nameInMovie}}</h3>
            </div>
        </div>
        {{/each}}
    </div>

</section>