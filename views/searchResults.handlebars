<section id="search">
  <h1>Search</h1>
  <form action="/search" method="post" class="form">
    <input type="text" class="search" name="title" placeholder="Title..." />
    <input type="text" name="genre" class="genre" placeholder="Genre..." />
    <input type="number" name="year" class="year" placeholder="Year..." />
    <input type="submit" value="search" />
  </form>
</section>

<section id="catalog">
  <div class="band">
    {{#if results.length}}
      <!-- If there are posts for movie in the database display each of them -->
      {{#each results}}
        <!-- If there are posts for creature in the database display each of them -->
        <div class="flip flip-vertical">
          <div class="front">
            <img src={{this.imageUrl}} alt="" />
          </div>
          <div class="back">
            <h1>{{this.title}}</h1>
            <h2>Genre: {{this.genre}}</h2>
            <p>Description: {{this.description}}</p>
            <a href="/details/:{{this.id}}" class="details">Details</a>
          </div>
        </div>

      {{/each}}
    {{else}}
      <!-- If there are no posts matched display: -->
      <div class="no-posts">
        <p class="no-offer">There are no movies matched...</p>
      </div>
    {{/if}}
  </div>
</section>